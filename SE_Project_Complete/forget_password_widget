  late ForgetpasswordModel _model;

  final scaffoldKey = GlobalKey<ScaffoldState>();

  @override
  void initState() {
    super.initState();
    _model = createModel(context, () => ForgetpasswordModel());

    _model.emailAddressController ??= TextEditingController();
